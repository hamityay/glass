%tr
  %td= order.width
  %td= order.height
  %td= order.count
  %td= order.products.first.name
  %td= order.quantity
  %td= order.amount
  %td= order.date
  %td= order.deadline
  %td= order.state
  %td= order.info
  %td.actions
    = link_to(edit_customer_order_path(@customer, order) , class: 'btn btn-info', data: { toggle: :tooltip }, title: t('tooltips.edit')) do
      %i.icon-edit
    = link_to([:customer, order], class: 'btn btn-danger', method: :delete, data: { confirm: t('tooltips.are_you_sure'), toggle: :tooltip }, title: t('tooltips.delete')) do
      %i.icon-trash
