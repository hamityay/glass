.panel-heading
  %i.icon-edit.icon-large
  = yield :form_title
  .panel-body
    = simple_form_for(@suplier) do |f|
      = f.error_notification

      .form-inputs
        = f.input :name
        = f.input :phone_number
        = f.input :agent_name

      .form-actions
        = f.button :submit, class: 'btn btn-primary'
        = link_to t('cancel'), supliers_path, class: 'btn'