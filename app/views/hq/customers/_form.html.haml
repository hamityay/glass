.panel.panel-default
  .panel-heading
    %i.icon-edit.icon-large
    = yield :form_title
  .panel-body
    = simple_form_for([:hq, @customer]) do |f|
      = f.error_notification

      .form-inputs
        = f.input :name
        = f.input :surname
        = f.input :email
        = f.input :phone
        = f.input :officer
        = f.input :total
        = f.association :user, :as => :collection_select

      .form-actions
        - text = @customer.id.present? ? t('btn.update') : t('btn.add')
        = f.button :submit, text, class: 'btn btn-primary'
        = link_to t('cancel'), hq_customers_path, class: 'btn'
