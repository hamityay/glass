- content_for :toolbar do
  = link_to new_hq_customer_path, class: 'btn btn-default' do
    %i.icon-plus
    = t('action_button.new', resource_name: Customer.model_name.human)

.panel.panel-default.grid
  .panel-heading
    %i.fa.fa-table.icon-large
    = t('activerecord.models.customers')
    .panel-tools
      .btn-group
        %a.btn{href: hq_customers_path, data: {toggle: 'toolbar-tooltip'}, title: t('view.reload')}
          %i.fa.fa-refresh
      .badge= @customers.total_entries
  =blankable(@customers)
  .panel-footer
    .pagination.pagination-sm
      = will_paginate @customers, renderer: BootstrapPagination::Rails, bootstrap: 3